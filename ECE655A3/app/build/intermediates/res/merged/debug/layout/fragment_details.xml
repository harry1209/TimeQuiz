<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:useDefaultMargins="true" >

        <TextView
            android:id="@+id/questionLabelTextView"
            style="@style/QuestionLabelTextView"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/label_question" />

        <TextView
            android:id="@+id/questionTextView"
            style="@style/QuestionTextView"
            android:layout_column="1"
            android:layout_row="0" />

        <TextView
            android:id="@+id/answerLabelTextView"
            style="@style/QuestionLabelTextView"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/label_answer" />

        <TextView
            android:id="@+id/answerTextView"
            style="@style/QuestionTextView"
            android:layout_column="1"
            android:layout_row="1" />

        <TextView
            android:id="@+id/firstLabelTextView"
            style="@style/QuestionLabelTextView"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/label_first" />

        <TextView
            android:id="@+id/firstTextView"
            style="@style/QuestionTextView"
            android:layout_column="1"
            android:layout_row="2" />

        <TextView
            android:id="@+id/secondLabelTextView"
            style="@style/QuestionLabelTextView"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/label_second" />

        <TextView
            android:id="@+id/secondTextView"
            style="@style/QuestionTextView"
            android:layout_column="1"
            android:layout_row="3" />

        <TextView
            android:id="@+id/thirdLabelTextView"
            style="@style/QuestionLabelTextView"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/label_third" />

        <TextView
            android:id="@+id/thirdTextView"
            style="@style/QuestionTextView"
            android:layout_column="1"
            android:layout_row="4" />

        <TextView
            android:id="@+id/timerLabelTextView"
            style="@style/QuestionLabelTextView"
            android:layout_column="0"
            android:layout_row="5"
            android:text="@string/timer_details" />

        <TextView
            android:id="@+id/timerValueTextView"
            style="@style/QuestionTextView"
            android:layout_column="1"
            android:layout_row="5"
             />

    </GridLayout>

</ScrollView>
